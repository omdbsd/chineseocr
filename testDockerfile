FROM arm64v8/ubuntu:20.04
MAINTAINER https://github.com/chineseocr/chineseocr
LABEL version="1.0"
EXPOSE 8080
RUN apt-get update && apt-get install  bash wget  -y

WORKDIR /chineseocr
ADD . /chineseocr
RUN cd /chineseocr && wget https://repo.anaconda.com/archive/Anaconda3-2021.04-Linux-aarch64.sh && /bin/bash Anaconda3-2021.04-Linux-aarch64 -b -p /root/anaconda3
#RUN /root/anaconda3/bin/conda config --add channels conda-forge
#RUN /root/anaconda3/bin/conda install -y python=3.6
RUN echo "seccessfully installed!"
RUN rm Anaconda3-2021.04-Linux-aarch64
