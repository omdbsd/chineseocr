FROM ubuntu:18.04
MAINTAINER https://github.com/chineseocr/chineseocr
LABEL version="1.0"
EXPOSE 8080
RUN apt-get update && apt-get install  bash wget  -y

WORKDIR /chineseocr
ADD . /chineseocr
RUN cd /chineseocr && wget https://repo.anaconda.com/archive/Anaconda3-2019.03-Linux-x86_64.sh && /bin/bash Anaconda3-2019.03-Linux-x86_64.sh -b -p /root/anaconda3
RUN echo "seccessfully installed!"
